<div id="rectangle_mid_reset_password">
    <div id="rectangle_form_reset_password">
        <div id="text_reset_password">Đặt lại mật khẩu của bạn</div>
        <form method="post" action="/auth/reset_password" class="needs-validation" id="formReset">

            <input type="hidden" name="token" value="{{token}}">
            <input type="hidden" name="email" value="{{email}}">

            <div id="label_new_password">Mật khẩu mới</div>
            <input type="password" name="new_password" id="new_password" required placeholder="Nhập mật khẩu mới">
            <img src="/css/style/image/logo_password.svg" id="logo_password_reset_password_1"
                alt="logo_password_reset_password">
            {{!-- <img src="/css/style/image/eye-slash.svg" id="eye_slash_new_password_1"
                alt="eye_slash_new_password_1"> --}}

            <div id="label_confirm_new_password">Xác nhận mật khẩu</div>
            <input type="password" name="confirm_new_password" id="confirm_new_password" required
                placeholder="Nhập lại mật khẩu">
            <img src="/css/style/image/logo_password.svg" id="logo_password_reset_password_2"
                alt="logo_password_reset_password">
            {{!-- <img src="/css/style/image/eye-slash.svg" id="eye_slash_new_password_2"
                alt="eye_slash_new_password_2"> --}}

            <button type="submit" id="submit_new_password">Thay đổi mật khẩu</button>
    </div>
    <div id="rectangle_image_reset_password">
        <img src="/css/style/image/side_reset_password.svg" id="side_reset_password" alt="side_reset_password">

    </div>
</div>


<script>

    // validate pass
    const confirm_new_password = $('#confirm_new_password');
    const new_password = $('#new_password');
    $("#formReset").on('input', function () {

        confirm_new_password.get(0).setCustomValidity(confirm_new_password.val() != new_password.val() ? "Mật khẩu nhập lại không đúng !" : "")

        if (new_password.val().length < 8) new_password.get(0).setCustomValidity("Mật khẩu phải có ít nhất 8 ký tự!");
        else if (!/\d/.test(new_password.val())) new_password.get(0).setCustomValidity("Mật khẩu phải có ít nhất một số (1, 2, ...)!");
        else if (!/[a-zA-Z]/.test(new_password.val())) new_password.get(0).setCustomValidity("Mật khẩu phải có ít nhất một ký tự chữ cái (a, b, C, D, ...)!");
        else if (!/[\W]/.test(new_password.val())) new_password.get(0).setCustomValidity("Mật khẩu phải có ít nhất một ký tự đặt biệt (@, $, ...)!");
        else new_password.get(0).setCustomValidity('');

    })

</script>